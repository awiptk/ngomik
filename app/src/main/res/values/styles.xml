<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Modern popup menu style -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <!-- Overflow Menu Modern Style -->
    <style name="OverflowMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:popupElevation">8dp</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:popupElevation">8dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

</resources>